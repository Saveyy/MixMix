@model MixMixMVC.Models.DrinkDecriptionViewModel

@{
    ViewBag.Title = "DrinkDecription";
}
<div class="container">
    <div class="center_container">
        <h4>Opret drink - Side 3 af 3</h4>
        <hr />
        <p>
            Indtast en beskrivelse af fremgangsmåden <br />
            der bruges til at lave din drink
        </p>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-xs-12">
                    <p>Opskrift beskrivelse</p>
                </div>
                <div class="col-xs-12">
                    @Html.TextAreaFor(model => model.Recipe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Recipe, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-12">
                    <input type="submit" value="Færdiggør drink" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>


